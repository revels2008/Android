	                    android:id="@+id/tv_item_detail_comment"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_centerVertical="true"
	                    android:layout_marginLeft="@dimen/item_detail_margin_left"
