<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_grey_repeat"
    android:orientation="vertical" >

    <include
        android:id="@+id/titleBar"
        layout="@layout/back_action_title_bar" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10"
        android:background="@null"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:scrollbars="none" >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:background="@drawable/bottom_bg" >

        <ImageButton
            android:id="@+id/chat_add"
            android:layout_width="@dimen/bottom_button_height"
            android:layout_height="@dimen/bottom_button_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/global_view_margin"
            android:background="@drawable/selector_bottom_img_bg"
            android:src="@drawable/bottom_add"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/chat_emoji"
            android:layout_width="@dimen/bottom_button_height"
            android:layout_height="@dimen/bottom_button_height"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/global_view_margin"
            android:layout_toLeftOf="@+id/chat_add"
            android:background="@drawable/selector_bottom_img_bg"
            android:src="@drawable/bottom_face"
            android:textSize="20sp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/chat_input"
            android:layout_width="@dimen/bottom_button_height"
            android:layout_height="@dimen/bottom_button_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/global_view_margin"
            android:layout_marginRight="@dimen/global_view_margin"
            android:background="@drawable/selector_bottom_img_bg"
            android:src="@drawable/bottom_font"
            android:textSize="20sp" />
        
        <EditText
            android:id="@+id/chat_editmessage"
            style="@style/EditText.NORMAL"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/global_view_margin"
            android:layout_marginRight="@dimen/global_view_margin"
            android:layout_marginBottom="@dimen/global_view_margin"
            android:layout_toLeftOf="@+id/chat_emoji"
            android:layout_toRightOf="@+id/chat_input"
            android:imeOptions="actionSend"
            android:singleLine="false" />
    </RelativeLayout>

</LinearLayout>