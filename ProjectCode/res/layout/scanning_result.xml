<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/bg_hide_content"
        android:visibility="visible">
	
         <ImageView
            android:id="@+id/iv_scanning_Return"
            style="@style/ImageButton.Title.LeftButton"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_btn_back_left" />
         
     <TextView
            android:id="@+id/txTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="扫描结果"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />

    </RelativeLayout>
	
	 <com.powerlong.electric.app.widget.PlWebView
            android:id="@+id/scanning_webview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:layout_gravity="center">
        </com.powerlong.electric.app.widget.PlWebView>
</LinearLayout>
