            android:id="@+id/favour_layout"
             style="@style/TextView.12_Black_ListTitle"
             android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/floor_shopimage"
            android:layout_toRightOf="@+id/floor_shopimage"
            android:singleLine="true"
            >
            <ImageView 
                android:id="@+id/start"
