<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    
    <LinearLayout
        android:id="@+id/ll_commodity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/ck_commodity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@drawable/selector_filter_price_checkbox"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/im_commodity"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/pic_56" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_shopping_cart_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ll_commodity"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="20dp" >

            <TextView
                android:id="@+id/shopping_cart_edit_before_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥199.00"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/shopping_cart_edit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥99.00"
                android:textColor="@color/B_black"
                android:layout_marginLeft="3dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/commodity_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="@color/B_black"
                android:paddingTop="5dp"
                android:text="x 1"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="2" >

            <ImageView
                android:id="@+id/shopping_cart_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/shopping_cart_delete"
                android:src="@drawable/shopping_cart_favorite" />

            <ImageView
                android:id="@+id/shopping_cart_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/shopping_cart_plus"
                android:src="@drawable/shopping_cart_delete" />

            <ImageView
                android:id="@+id/shopping_cart_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopping_cart_favorite"
                android:layout_toLeftOf="@+id/shopping_cart_number"
                android:src="@drawable/shopping_cart_minus" />

            <TextView
                android:id="@+id/shopping_cart_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopping_cart_favorite"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shopping_cart_number"
                android:gravity="center"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/shopping_cart_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopping_cart_favorite"
                android:layout_toRightOf="@+id/shopping_cart_number"
                android:src="@drawable/shopping_cart_plus" />
        </RelativeLayout>
    </LinearLayout>

