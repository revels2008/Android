    <RelativeLayout
        android:id="@+id/ll_shopping_cart_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_toRightOf="@+id/ll_commodity"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_commodity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:text="韩国烤肉"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/B_black" />

        <TextView
            android:id="@+id/tv_commodity_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_commodity_name"
            android:layout_marginRight="2dip"
            android:layout_marginTop="2dip"
            android:text="品味有品质的…"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/B_black" />

        <TextView
            android:id="@+id/tv_commodity_price_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="¥199.00"
            android:textAppearance="@android:style/TextAppearance.Small" />

        <TextView
            android:id="@+id/tv_commodity_price_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_commodity_introduction"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="3dip"
            android:text="99.00"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/B_black" />

        <TextView
            android:id="@+id/tv_commodity_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_commodity_introduction"
            android:layout_marginTop="2dip"
            android:text="x 1"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/B_black" />
    </RelativeLayout>

</RelativeLayout>