<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    	 <ImageView 
		        android:id="@+id/iv_diliver2"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="8dp"
		        android:src="@drawable/line_full"/>
    
	    <TextView 
		        android:id="@+id/tv_groupon_detail_item"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="8dp"
		        android:layout_marginLeft="10dp"
		        android:layout_below="@+id/iv_diliver2"
		        android:text="周大福"
		        android:textSize="16dp"
		        android:textColor="@color/activity_text_black"
		        android:layout_alignParentLeft="true"
		        android:layout_toLeftOf="@+id/tv_shop_list_evaluate"/>
		    <RatingBar 
		        android:id="@+id/rb_groupon_detail"
				style="@style/ShopRatingBar"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/tv_groupon_detail_item"
				android:layout_marginLeft="10dp"
				android:layout_centerVertical="true"
				android:isIndicator="true"
				android:numStars="5"
				android:rating="1.5" 
				android:visibility="gone"/>
		    
		    <TextView 
		        android:id="@+id/tv_groupon_detail_category"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingBottom="8dp"
		        android:layout_below="@+id/rb_groupon_detail"
		        android:layout_marginLeft="10dp"
		        android:text="珠宝\首饰"
		        android:textSize="@dimen/groupon_detail_black_small"
		        android:textColor="@color/activity_text_black"/>
		    
		    <TextView 
		        android:id="@+id/tv_groupon_evaluate"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:gravity="center" 
		        android:layout_marginRight="16dp"
		        android:textColor="@color/white"
		        android:layout_centerVertical="true"
		        android:background="@drawable/evaluate"/>
		    

</RelativeLayout>
