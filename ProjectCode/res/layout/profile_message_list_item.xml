<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItem.ItemXLarge"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/global_view_margin" >

    <ImageView
        android:id="@+id/sender_photo"
        android:layout_width="86dip"
        android:layout_height="86dip"
        android:background="@drawable/pic_bg"
        android:padding="@dimen/global_photo_padding"
        android:scaleType="fitXY"
        android:src="@drawable/pic_130" />

    <TextView
        android:id="@+id/sender_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_view_margin"
        android:layout_toRightOf="@id/sender_photo"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:text="系统管理员"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sender_name"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/global_view_margin"
        android:layout_toRightOf="@id/sender_name"
        android:gravity="right|center"
        android:singleLine="true"
        android:text="8月29日  21:30"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_xxsamll" >
    </TextView>

    <TextView
        android:id="@+id/notification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/sender_name"
        android:layout_below="@id/sender_name"
        android:layout_marginTop="@dimen/global_item_value_margin_right"
        android:ellipsize="end"
        android:lines="2"
        android:text="all"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_xsamll" >
    </TextView>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/next_nor"/>

</RelativeLayout>