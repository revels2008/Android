<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="8dp" >

    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
	    <TextView 
	        android:id="@+id/tv_order_status"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#368947"
	        android:textSize="12sp"/>
	    
	    <TextView
	        android:id="@+id/tv_order_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/tv_order_status"
	        android:textColor="#368947"
	        android:textSize="12sp"
	        android:layout_marginLeft="12dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/divider_style" />

    <RelativeLayout
        android:id="@+id/order1_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:background="@drawable/pic_bg"
            android:id="@+id/img_order1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="4dp"
            android:scaleType="fitXY" />
        
         <ImageView
	        android:id="@+id/orderFlag"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/groupon_tab1" 
	        android:layout_alignRight="@+id/img_order1"/>

        <TextView
            android:id="@+id/tv_order1_name"
            android:layout_width="200dp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/img_order1"
            android:layout_toLeftOf="@+id/tv_order1_price"
            android:textColor="@color/B_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_order1_description1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_order1_name"
            android:layout_below="@id/tv_order1_name"
			android:textColor="@color/B_black"
			android:layout_marginTop="16dp"
			android:layout_toLeftOf="@+id/tv_order1_price"
            android:textSize="16sp"
            android:text="" />
<!-- 
        <TextView
            android:id="@+id/tv_order1_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B8B8B8"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_order1_description3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img_order1"
            android:layout_below="@id/img_order1"
            android:textColor="#B8B8B8"
            android:textSize="10sp" />
 -->
        <TextView
            android:id="@+id/tv_order1_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/B_black"
            android:layout_marginRight="8dp"
            android:layout_alignTop="@id/tv_order1_name" 
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_order1_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:textColor="@color/B_black"
            android:layout_alignTop="@id/tv_order1_description1"
            android:textSize="16sp"
             />
    </RelativeLayout>

   

    <RelativeLayout
        android:id="@+id/order2_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
		 <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:id="@+id/img_divider2"
	        android:layout_marginTop="6dp"
	        android:layout_marginBottom="8dp"
	        android:src="@drawable/divider_style" />
        
        <ImageView
            android:layout_below="@id/img_divider2"
            android:id="@+id/img_order2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="4dp"
            android:background="@drawable/pic_bg"
            android:scaleType="fitXY" />
        
        <ImageView
	        android:id="@+id/orderFlag2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/groupon_tab1" 
	        android:layout_alignRight="@+id/img_order2"
	        android:layout_alignTop="@+id/img_order2"/>

       <TextView
            android:id="@+id/tv_order2_name"
            android:layout_width="200dp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/img_order2"
            android:textColor="@color/B_black"
            android:layout_toLeftOf="@+id/tv_order2_price"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_order2_description1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_order2_name"
            android:layout_below="@id/tv_order2_name"
			android:textColor="@color/B_black"
			android:layout_toLeftOf="@+id/tv_order2_num"
			android:layout_marginTop="16dp"
            android:textSize="16sp" />
<!-- 
        <TextView
            android:id="@+id/tv_order2_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B8B8B8"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_order2_description3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img_order2"
            android:layout_below="@id/img_order2"
            android:textColor="#B8B8B8"
            android:textSize="18sp" />
 -->
        <TextView
            android:id="@+id/tv_order2_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:textColor="@color/B_black"
            android:layout_alignTop="@id/tv_order2_name" 
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_order2_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/B_black"
            android:layout_marginRight="8dp"
            android:layout_alignTop="@id/tv_order2_description1"
            android:textSize="16sp" />
         
    </RelativeLayout>
	<LinearLayout android:id="@+id/ll_more" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">
	    <ImageView
             android:layout_below="@id/tv_order2_num"
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:layout_marginTop="6dp"
	        android:layout_marginBottom="8dp"
	        android:src="@drawable/divider_style" />
	    <TextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableRight="@drawable/arrow_down" />
	</LinearLayout>
    
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
         android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/divider_style" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计:"
            android:textColor="@color/B_black" 
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:layout_marginTop="4dp"
            android:textColor="@color/B_black"
            android:text="数量:" 
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toRightOf="@id/price"
            android:layout_alignTop="@id/price"
            android:layout_marginLeft="20dp"
            android:textColor="#D43E3E"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tv_price"
            android:layout_alignTop="@id/num"
            android:textColor="#D43E3E" 
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_pay"
            android:textSize="18sp"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:background="@drawable/selector_btn_yellow"
            android:text="立即付款" />
    </RelativeLayout>

</LinearLayout>