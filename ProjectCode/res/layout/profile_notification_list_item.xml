<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItem.ItemXLarge"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/global_view_margin" >

    <ImageView
        android:id="@+id/sender_photo"
        android:layout_width="86dip"
        android:layout_height="86dip"
        android:background="@drawable/pic_bg"
        android:padding="@dimen/global_photo_padding"
        android:scaleType="fitXY"
        android:src="@drawable/pic_130" />

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sender_photo"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_view_margin"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:text="系统管理员"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium" />

        <ImageView
            android:id="@+id/msg_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notice_trade" />
    </LinearLayout>

    <TextView
        android:id="@+id/send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/title"
        android:layout_marginTop="@dimen/global_view_margin"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/global_view_margin"
        android:layout_toRightOf="@id/title"
        android:gravity="right|center"
        android:singleLine="true"
        android:text="8月29日  21:30"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_xxsamll" >
    </TextView>

    <com.powerlong.electric.app.widget.CollapsibleTextView
        android:id="@+id/notification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title" >
    </com.powerlong.electric.app.widget.CollapsibleTextView>

</RelativeLayout>