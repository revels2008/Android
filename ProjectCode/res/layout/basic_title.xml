<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/top_bg1"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/ivReturn"
            style="@style/ImageButton.Title.LeftButton"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_btn_back_left" />

        <TextView
            android:id="@+id/txTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="女装"
            android:textColor="@color/searchlist_summary_color"
            android:textSize="@dimen/text_size_large"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivFilter"
            style="@style/ImageButton.Title.RightButton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_filter" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/search_bar_bg_height"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/ivFilter"
            android:layout_toRightOf="@+id/ivReturn" >

            <EditText
                android:id="@+id/evSearch"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/search_bar_height"
                android:layout_gravity="center"
                android:layout_margin="@dimen/cart_items_margin"
                android:background="@drawable/search_bar_button_background"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="8.0dip"
                android:hint="@string/search_filter_hint"
                android:imeOptions="actionSearch"
                android:paddingLeft="5dip"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium" >
            </EditText>

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right|center"
                android:layout_marginRight="12.0dip"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/close"
                android:visibility="gone" />
        </FrameLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/filter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:background="#eeeeee"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/type"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="5dip"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible" >

            <Button
                android:id="@+id/type_good"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/selector_tab_left_green"
                android:gravity="center"
                android:text="@string/goods"
                android:textColor="@color/searchlist_summary_color"
                android:textSize="@dimen/text_size_medium" />

            <ImageView
                android:layout_width="1dip"
                android:layout_height="fill_parent" />

            <Button
                android:id="@+id/type_shop"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/selector_tab_right_green"
                android:gravity="center"
                android:text="@string/shop"
                android:textColor="@color/searchlist_summary_color"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sort"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="0dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rlpopular"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="bottom" >

               
                <TextView
                    android:id="@+id/popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:clickable="false"
                    android:drawableRight="@drawable/selector_sort_down"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="@string/popular"
                    android:textColor="@color/sort_bar_txt_color"
                    android:textSize="@dimen/text_size_medium" />
					
                 <ImageView
                    android:id="@+id/arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/popular"
                    android:layout_below="@+id/popular"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_alignParentBottom="true"
                    android:clickable="false"
                    android:src="@drawable/reorder_bg_press" />
                
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlsales"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                 android:gravity="bottom" >

                <TextView
                    android:id="@+id/sales"
                   	android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:clickable="false"
                    android:drawableRight="@drawable/selector_sort_down"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="@string/sales"
                    android:textColor="@color/sort_bar_txt_color"
                    android:textSize="@dimen/text_size_medium" />

                <ImageView
                    android:id="@+id/arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/sales"
                    android:layout_below="@+id/sales"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:clickable="false"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/reorder_bg_press" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlprice"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:clickable="false"
                    android:drawableRight="@drawable/selector_sort_down"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="@string/price"
                    android:textColor="@color/sort_bar_txt_color"
                    android:textSize="@dimen/text_size_medium" />

                <ImageView
                    android:id="@+id/arrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/price"
                    android:layout_below="@+id/price"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_alignParentBottom="true"
                    android:clickable="false"
                    android:src="@drawable/reorder_bg_press" />
            </RelativeLayout>
            <!--
            <TextView
                android:id="@+id/sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:drawablePadding="-8dip"
                android:drawableRight="@drawable/reorder_down_press"
                android:gravity="right|center"
                android:paddingLeft="5dip"
                android:paddingRight="22dip"
                android:text="@string/sales"
                android:textColor="@color/sort_bar_txt_color"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:drawablePadding="-8dip"
                android:drawableRight="@drawable/reorder_down_press"
                android:gravity="right|center"
                android:paddingLeft="5dip"
                android:paddingRight="22dip"
                android:text="@string/price"
                android:textColor="@color/sort_bar_txt_color"
                android:textSize="@dimen/text_size_medium" />
            -->
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>