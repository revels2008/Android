<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@null" >

  <!--   <include
        android:id="@+id/shopping_cart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/shopping_cart_title" /> -->
	<RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:visibility="gone" >
    
    	<CheckBox
            android:id="@+id/ck_selectAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/str_all_goods"
            android:textSize="@dimen/cart_text_normal_size"
            android:textColor="@color/black"
            android:button="@drawable/selector_filter_price_checkbox" />
    
	    <TextView 
	        android:id="@+id/shopping_cart_tips"
	        android:text="长按条目可编辑"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:textColor="@color/black"
	        android:layout_centerVertical="true"
	        android:textSize="22sp"/>
	</RelativeLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_layout" >

        <com.handmark.pulltorefresh.library.PullToRefreshScrollView
            android:id="@+id/sv_shopping_cart"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_grey_repeat"
            android:fadingEdge="none"
            android:scrollbars="none" >

            <com.powerlong.electric.app.widget.TableViewLayout
                android:id="@+id/table_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/cart_items_margin" />
        </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

<!--         <ListView
            android:id="@+id/lv_shopping_cart"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bg_grey_repeat"
            android:visibility="gone" >
        </ListView> -->
        
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/lv_shopping_cart"
            style="@style/List.Fill.Tranparent"
            android:background="@color/transparent"
            android:cacheColorHint="#00000000"
            android:visibility="gone" >
        </com.handmark.pulltorefresh.library.PullToRefreshListView>

       <!--  <include layout="@layout/progressbar_layout" /> -->
    </FrameLayout>
	
    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/bottom_bg_select"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="2"
           android:layout_gravity="center_vertical"
           android:orientation="horizontal" >
        
            <!-- 删除 -->
            <RelativeLayout
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1" >
                
                <LinearLayout
	              android:id="@+id/linear_delete"
	              android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:gravity="center"
	              android:layout_centerVertical="true"
	              android:orientation="vertical" >
           
		        	<!-- 编辑时删除 -->
			        <ImageView 
			           android:id="@+id/img_delete"
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:src="@drawable/icon_delete_white"
			           android:layout_gravity="center_horizontal" />
			        
			        <TextView 
			           android:id="@+id/txt_delete"
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:textColor="@color/white"
			           android:textSize="10dp"
			           android:layout_gravity="center_horizontal"
			           android:text="删除" />
               
           		</LinearLayout>
                
            </RelativeLayout>
            
            <!-- 收藏 -->
            <RelativeLayout
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1" >
                
                <LinearLayout
	              android:id="@+id/linear_favour"
	              android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:layout_marginLeft="10dp"
	              android:gravity="center"
	              android:layout_centerVertical="true"
	              android:orientation="vertical" >
		   
			        <!-- 编辑时收藏 -->
			        <ImageView 
			           android:id="@+id/img_favour"
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:layout_gravity="center_horizontal"
			           android:src="@drawable/icon_favorite_white" />
			        
			         <TextView 
			           android:id="@+id/txt_favour"
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:textColor="@color/white"
			           android:textSize="10dp"
			           android:layout_gravity="center_horizontal"
			           android:text="收藏" />
           
          		 </LinearLayout>
                
            </RelativeLayout>
            
        </LinearLayout>
        
        <!-- 总计文本 -->
        <RelativeLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_weight="4" >
        
            <TextView
	            android:id="@+id/sum_price"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:textColor="@color/cart_bottom_price"
	            android:textSize="18sp" />
            
        </RelativeLayout>
        
        <!-- 结算按钮 -->
        <RelativeLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_weight="2" >
        
            <Button
	            android:id="@+id/btn_total"
	            android:layout_width="wrap_content"
	            android:layout_height="@dimen/cart_btn_size"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:gravity="center"
	            android:layout_marginBottom="5dip"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:background="@drawable/selector_btn_yellow"
	            android:enabled="true"
	            android:textColor="@color/white"
	            android:text="结算 " />
            
        </RelativeLayout>
        
       <!-- <RelativeLayout 
          android:id="@+id/rela_left"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:layout_alignParentLeft="true" >
           
           
           
           
        
       </RelativeLayout> -->

        

        
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout_favour"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_bg_select"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:visibility="gone" >

        <Button
            android:id="@+id/btn_delete_favour"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/cart_btn_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/selector_btn_white"
            android:clickable="false"
            android:gravity="center"
            android:padding="5dip"
            android:text="   删 除   "
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/grey" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/cart_btn_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/cart_items_margin"
            android:background="@drawable/selector_btn_white"
            android:padding="5dip"
            android:text="  加入购物车  "
            android:textColor="@color/grey" />
    </RelativeLayout>
    
</RelativeLayout>