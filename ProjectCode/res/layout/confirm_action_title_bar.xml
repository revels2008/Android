<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@drawable/top_bg1" >

    <ImageView
        android:id="@+id/ivBack"
        style="@style/ImageButton.Title.LeftButton"
        android:layout_centerVertical="true"
        android:src="@drawable/selector_btn_back_left"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xlarge" />
    
       <ImageView
        android:id="@+id/ivConfirm"
        style="@style/ImageButton.Title.RightButton"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_confirm" />
       
       <ImageView
        android:id="@+id/ivConfirmDisable"
        style="@style/ImageButton.Title.RightButton.Disable"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_confirm"
        android:visibility="gone" />

</RelativeLayout>
