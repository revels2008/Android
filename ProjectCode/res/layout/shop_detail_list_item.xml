<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItem.ItemNormal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout 
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
	    <ImageView
	        android:id="@+id/floor_shopimage"
	        android:layout_width="90.0dip"
	        android:layout_height="90.0dip"
	        android:background="@drawable/pic_bg"
	        android:padding="@dimen/global_photo_padding"
	        android:scaleType="fitCenter"
	        android:src="@drawable/pic_56" />
	    <ImageView
	        android:id="@+id/grouponFlag"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/groupon_tab1" 
	        android:layout_alignRight="@+id/floor_shopimage"
	        android:visibility="gone"/>
	</RelativeLayout>
    <TextView
        android:id="@+id/floor_title_shop"
        style="@style/TextView.16_Black_ListTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="2.0dip"
        android:layout_toRightOf="@+id/image"
        android:maxLines="2"
        android:text="商品名称" />

    <TextView
        android:id="@+id/floor_products_plprice"
        style="@style/TextView.14_Orange_ListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/floor_title_shop"
        android:layout_below="@+id/floor_title_shop"
        android:layout_marginTop="8.0dip"
        android:singleLine="true"
        android:text="￥ 99.00" />

    <TextView
        android:id="@+id/floor_products_listprice"
        style="@style/TextView.12_Grey_ListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/floor_title_shop"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_toRightOf="@+id/floor_products_plprice"
        android:singleLine="true"
        android:text="￥ 199.00" />

    <TextView
        android:id="@+id/floor_sell_txt"
        style="@style/TextView.12_Grey_ListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/floor_title_shop"
        android:layout_below="@+id/floor_products_plprice"
        android:layout_marginTop="8.0dip"
        android:singleLine="true"
        android:text="月销量:" />

    <TextView
        android:id="@+id/floor_sell_num"
        style="@style/TextView.12_Grey_ListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/floor_products_plprice"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8.0dip"
        android:layout_toRightOf="@+id/floor_sell_txt"
        android:singleLine="true"
        android:text="1.2万件" />

    <TextView
        android:id="@+id/floor_area"
        style="@style/TextView.12_Grey_ListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/floor_products_plprice"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8.0dip"
        android:layout_toRightOf="@+id/floor_sell_num"
        android:singleLine="true"
        android:text="产地"
        android:visibility="gone" />

</RelativeLayout>