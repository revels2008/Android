<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bill_2" >
    
    
    <LinearLayout 
        android:id="@+id/ll_settle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
		<LinearLayout
	        android:id="@+id/ll_commodity"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
	        <ImageView
	            android:id="@+id/im_commodity"
	            android:layout_width="@dimen/item_img_height"
	            android:layout_height="@dimen/item_img_height"
	            android:scaleX="0.8"
	            android:scaleY="0.8"
	            android:src="@drawable/pic_56" />
	    </LinearLayout>
	    
		 <RelativeLayout
	        android:id="@+id/ll_shopping_cart_introduction"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
	        android:layout_gravity="center_vertical"
	        android:visibility="visible" >
	
	        <TextView
	            android:id="@+id/tv_commodity_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_marginRight="8dip"
	            android:text="韩国烤肉  品味有品质的…"
	            android:lines="2"
	            android:layout_toLeftOf="@+id/ll_price"
	            android:textSize="@dimen/settile_content"
	            android:textColor="@color/B_black" />
	
	         <TextView
	            android:id="@+id/tv_commodity_introduction"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/tv_commodity_name"
	            android:layout_marginRight="8dip"
	            android:layout_marginTop="2dip"
	            android:text="品味有品质的…"
	            android:singleLine="true"
	            android:textAppearance="@android:style/TextAppearance.Small"
	            android:textColor="@color/B_black" 
	            android:visibility="gone"/>
	
	<!--         <TextView
	            android:id="@+id/tv_commodity_price_before"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_marginTop="10dp"
	            android:text="¥199.00"
	            android:textAppearance="@android:style/TextAppearance.Small" /> -->
	
			<LinearLayout
			    android:id="@+id/ll_price"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_marginRight="8dp"
			    android:layout_alignTop="@+id/tv_commodity_name"
			    android:orientation="vertical"
			    android:layout_centerVertical="true" >
	
		        <TextView
		            android:id="@+id/tv_commodity_price_now"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:text="99.00"
		            android:textAppearance="@android:style/TextAppearance.Medium"
		            android:textColor="@color/B_black" />
		
		        <TextView
		            android:id="@+id/tv_commodity_amount"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="2dip"
		            android:layout_gravity="right"
		            android:text="x 1"
		            android:textAppearance="@android:style/TextAppearance.Small"
		            android:textColor="@color/B_black" />
	        </LinearLayout>
	    </RelativeLayout>
	</LinearLayout>
    <ListView 
	    android:id="@+id/settle_item_list"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="16dp"
	    android:divider="@color/transparent"
	    android:dividerHeight="0dp"
	    android:clickable="false"
	    android:background="@color/transparent"
	    ></ListView> 
</LinearLayout>
