<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grey_repeat"
    android:orientation="vertical" >

    <include
        android:id="@+id/titlebar"
        layout="@layout/nextstep_action_title_bar" />

    <include
        android:id="@+id/sortbar"
        layout="@layout/register_type_bar" />

    <LinearLayout
        android:id="@+id/byMobileView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/register_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_view_margin"
            android:layout_marginTop="@dimen/global_item_value_margin_right"
            android:text="@string/str_register_cofirm_info_tips"
            android:textColor="@color/text_supplementary_color"
            android:textSize="@dimen/text_size_medium" />

        <RelativeLayout
            android:id="@+id/first_edit"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginLeft="@dimen/global_view_margin"
            android:layout_marginRight="@dimen/global_view_margin"
            android:layout_marginTop="@dimen/global_item_value_margin_right"
            android:background="@drawable/selector_edittext_email" >

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/global_view_margin"
                android:src="@drawable/next_nor" />

            <TextView
                android:id="@+id/select_region_code"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/global_view_margin"
                android:layout_toLeftOf="@id/arrow"
                android:gravity="center"
                android:text="@string/str_register_region_id"
                android:textColor="@color/text_country_code_color"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/country_edit"
                style="@style/EditText.COUNTRY"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/global_view_margin"
                android:layout_toLeftOf="@id/select_region_code" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/second_edits"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_view_margin"
            android:layout_marginTop="@dimen/global_item_value_margin_right"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:id="@+id/code_editor"
                style="@style/EditText.NORMAL"
                android:layout_width="0dip"
                android:layout_height="@dimen/title_height"
                android:layout_marginRight="@dimen/global_view_margin"
                android:layout_weight="0.5"
                android:inputType="none"
                android:paddingLeft="@dimen/global_view_margin"
                android:text="+86"
                android:textColor="@color/text_country_code_color"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/phone_edit"
                style="@style/EditText.MOBILE"
                android:layout_width="0dip"
                android:layout_height="@dimen/title_height"
                android:layout_marginRight="@dimen/global_view_margin"
                android:layout_weight="1.5"
                android:hint="@string/str_register_input_num"
                android:paddingLeft="@dimen/global_view_margin"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/byMailView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/rlEditMail"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginLeft="@dimen/global_view_margin"
            android:layout_marginRight="@dimen/global_view_margin"
            android:layout_marginTop="@dimen/global_item_value_margin_right"
            android:background="@drawable/selector_edittext_email" >

            <TextView
                android:id="@+id/mail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/global_view_margin"
                android:text="邮箱"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/mail_edit"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginLeft="@dimen/global_view_margin"
                android:layout_marginRight="@dimen/global_view_margin"
                android:layout_toRightOf="@+id/mail_text"
                android:background="@null"
                android:gravity="left|center"
                android:hint="@string/profile_input_email_text"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/global_view_margin"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_medium" />
        </RelativeLayout>


    </LinearLayout>

            <RelativeLayout
            android:id="@+id/rlEditPwd"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginLeft="@dimen/global_view_margin"
            android:layout_marginRight="@dimen/global_view_margin"
            android:layout_marginTop="@dimen/global_item_value_margin_right"
            android:background="@drawable/selector_edittext_email" >

            <TextView
                android:id="@+id/pwd_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/global_view_margin"
                android:text="密码"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/pwd_edit"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginLeft="@dimen/global_view_margin"
                android:layout_marginRight="@dimen/global_view_margin"
                android:layout_toRightOf="@+id/pwd_text"
                android:background="@null"
                android:inputType="textPassword"
                android:gravity="left|center"
                android:hint="@string/profile_input_pwd_text"
                android:imeOptions="actionGo"
                android:paddingLeft="@dimen/global_view_margin"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_medium" >
            </EditText>
        </RelativeLayout>
   	<LinearLayout
        android:id="@+id/textviews"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/global_item_value_margin_right"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_agreement"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_view_margin"
            android:layout_weight="1" >

            <CheckBox
                android:id="@+id/cb_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:button="@drawable/selector_filter_price_checkbox"
                android:checked="true" />

            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="-8dip"
                android:inputType="none"
                android:paddingLeft="@dimen/global_view_margin"
                android:text="@string/str_register_cofirm_agreement"
                android:textColor="@color/text_country_code_color"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

   

        <com.powerlong.electric.app.widget.SwitchButton
            android:id="@+id/pwd_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/global_view_margin" 
            android:visibility="gone"/>
        <!-- </LinearLayout> -->

        <TextView
            android:id="@+id/tv_sso"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/global_view_margin"
            android:layout_weight="0.85"
            android:gravity="right|center"
            android:hint="@string/str_register_thirdparty_sso"
            android:paddingLeft="@dimen/global_view_margin"
            android:textColorHint="@color/text_sso_link_color"
            android:textSize="@dimen/text_size_small"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>