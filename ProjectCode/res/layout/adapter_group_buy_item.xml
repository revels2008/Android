<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItem.ItemNormal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout 
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
	    <ImageView
	        android:id="@+id/img_item"
	        android:layout_width="120.0dip"
	        android:layout_height="90.0dip"
	        android:background="@drawable/pic_bg"
	        android:padding="@dimen/global_photo_padding"
	        android:scaleType="fitXY"
	        android:src="@drawable/pic_56" />
	    <ImageView
	        android:id="@+id/grouponFlag"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/groupon_tab1" 
	        android:layout_alignRight="@+id/floor_shopimage"
	        android:visibility="gone"/>
	</RelativeLayout>
    <TextView
        android:id="@+id/tv_name"
        style="@style/TextView.16_Black_ListTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="2.0dip"
        android:layout_toRightOf="@+id/image"
        android:maxLines="2"
        android:text="商品名称" />

    
    
    <TextView
        android:id="@+id/tv_list_price"
        style="@style/TextView.14_Orange_ListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="8.0dip"
         android:layout_marginLeft="10.0dip"
        android:singleLine="true"
        android:textColor="#ff0600"
        android:text="￥ 99.00" />

    <RelativeLayout 
        android:id="@+id/rl_list_price"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/tv_list_price"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/tv_list_price"
        >
	    <TextView
	        android:id="@+id/tv_pl_price"
	        style="@style/TextView.12_Grey_ListTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_marginLeft="10.0dip"
	        android:layout_marginTop="8.0dip"
	        android:singleLine="true"
	        android:textColor="@color/black"
	        android:text="￥ 199.00" />
	    
	    <ImageView 
	        android:id="@+id/iv_cut_price"
	        android:layout_width="40dp"
	        android:layout_marginLeft="10.0dip"
	        android:layout_marginTop="8.0dip"
	        android:layout_height="1dp"
	        android:layout_centerInParent="true"
	        android:background="@color/black"
	        android:visibility="gone"
	        />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_discount"
        style="@style/TextView.14_Orange_ListTitle"
        android:layout_marginLeft="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rl_list_price"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="8.0dip"
        android:singleLine="true"
        android:textColor="@color/green"
        android:text="s" />
    
    <TextView
        android:id="@+id/tv_sells"
        style="@style/TextView.12_Grey_ListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_below="@+id/tv_list_price"
        android:layout_marginTop="8.0dip"
        android:singleLine="true"
        android:text="月销量:" />

    <!-- TextView
        android:id="@+id/tv_sells"
        style="@style/TextView.12_Grey_ListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pl_price"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8.0dip"
        android:layout_toRightOf="@+id/floor_sell_txt"
        android:singleLine="true"
        android:text="1.2万件" /-->

    <TextView
        android:id="@+id/floor_area"
        style="@style/TextView.12_Grey_ListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_list_price"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8.0dip"
        android:layout_toRightOf="@+id/floor_sell_num"
        android:singleLine="true"
        android:text="产地"
        android:visibility="gone" />

</RelativeLayout>