<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sort"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/copoun_sort_bar_bg_height"
    android:paddingTop="10dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_marginRight="12dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_grey_repeat">

    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/copoun_sort_bar_height"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:gravity="center">
	    <LinearLayout
	        android:id="@+id/ll_tab_item1"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:gravity="center"      
	        android:background="@drawable/selector_tab_left_yellow"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/tv_sort_item1"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="人气"
	            android:gravity="center"
	            android:textColor="@color/coupon_sort_bar_txt_color"
	            android:textSize="15sp" />
	    </LinearLayout>
	    
	    <View style="@style/SortBar.Divider" />
	
	    <LinearLayout
	        android:id="@+id/ll_tab_item2"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:gravity="center"      
	        android:background="@drawable/selector_tab_middle_yellow"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/tv_sort_item2"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="销量"
	            android:gravity="center"
	            android:textColor="@color/coupon_sort_bar_txt_color"
	            android:textSize="15sp" />
	    </LinearLayout>
	    
	    <View style="@style/SortBar.Divider" />
	
	    <LinearLayout
	        android:id="@+id/ll_tab_item3"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:gravity="center"      
	        android:background="@drawable/selector_tab_middle_yellow"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/tv_sort_item3"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="价格"
	            android:drawableRight="@drawable/selector_sort_down"
	            android:gravity="center"
	            android:textColor="@color/coupon_sort_bar_txt_color"
	            android:textSize="15sp" />
	    </LinearLayout>
	    
	    <View style="@style/SortBar.Divider" />
	    
	    <LinearLayout
	        android:id="@+id/ll_tab_item4"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:gravity="center"      
	        android:background="@drawable/selector_tab_right_yellow"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/tv_sort_item4"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="价格"
	            android:gravity="center"
	            android:textColor="@color/coupon_sort_bar_txt_color"
	            android:textSize="15sp" />
	    </LinearLayout>
	
	</LinearLayout>
</RelativeLayout>