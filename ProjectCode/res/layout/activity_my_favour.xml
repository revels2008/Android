<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grey_repeat"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/top_bg1"
        android:focusable="true"
        android:layout_alignParentTop="true"
        android:focusableInTouchMode="true"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_back"
            style="@style/ImageButton.Title.LeftButton"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_btn_back_left" />

        <TextView
            android:id="@+id/txTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:text="我的收藏"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xlarge" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/copoun_sort_bar_bg_height"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/global_view_margin"
        android:layout_marginRight="@dimen/global_view_margin"
        android:background="@drawable/bg_grey_repeat"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/btn_shop"
            android:layout_width="0dip"
            android:layout_height="@dimen/copoun_sort_bar_height"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_left_yellow"
            android:text="商铺"
            android:textColor="@color/coupon_sort_bar_txt_color"
            android:textSize="@dimen/text_size_medium" />

        <requestFocus />
		
        <View style="@style/SortBar.Divider" />
       	
        <Button
            android:id="@+id/btn_item"
            android:layout_width="0dip"
            android:layout_height="@dimen/copoun_sort_bar_height"
            android:layout_gravity="center"
            android:layout_marginRight="2dip"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_right_yellow"
            android:text="商品"
            android:textColor="@color/coupon_sort_bar_txt_color"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@null"
        android:layout_below="@+id/ll_btn">

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/lv_shop"
            style="@style/List.Fill.Tranparent" >
        </com.handmark.pulltorefresh.library.PullToRefreshListView>
        
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/lv_item"
            style="@style/List.Fill.Tranparent"
            android:background="@color/transparent"
            android:cacheColorHint="#00000000"
            android:visibility="gone" >
        </com.handmark.pulltorefresh.library.PullToRefreshListView>
        <LinearLayout
            android:id="@+id/ll_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" 
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView 
                android:id="@+id/iv_msg_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/no_shop"
                />
            
            <TextView
                android:id="@+id/tv_msg_tips"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="您还未收藏店铺 "
                android:textSize="@dimen/activity_black_text_size" />
        </LinearLayout>
        
    </FrameLayout>

	<RelativeLayout
	    android:id="@+id/rel_bottom"
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/title_height"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/bottom_bg"
	    android:focusable="true"
	    android:focusableInTouchMode="true"
	    android:gravity="center"
	    android:visibility="gone" >

        <Button
            android:id="@+id/btn_delete"
            android:text="删除"
            android:layout_centerVertical="true"
            android:background="@drawable/bottom_bg_nor"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            ></Button>

        <Button
            android:id="@+id/btn_putcart"
             android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/bottom_bg_nor"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:visibility="gone" />

    </RelativeLayout>
</RelativeLayout>