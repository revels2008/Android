<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:background="@null"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/myorder_item_height"
        android:layout_marginLeft="@dimen/global_view_margin"
        android:layout_marginRight="@dimen/global_view_margin"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
       <!--  <RelativeLayout
            android:id="@+id/rl_houseimage"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/myorder_item_height"
            android:background="@drawable/pic_bg" > -->
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/myorder_item_img_width"
                android:layout_height="@dimen/myorder_item_img_height"
                android:padding="@dimen/myorder_item_margin"
                android:scaleType="fitCenter"
                android:background="@drawable/pic_bg"
                />
       <!--  </RelativeLayout> -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/myorder_item_img_height"
            android:layout_margin="@dimen/myorder_item_margin"
            android:orientation="vertical" >

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_order_msg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="大歌星量贩式KTV欢迎光临大优惠"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_xsamll" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:text="￥100"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_xsamll" />
                <TextView
                    android:id="@+id/tv_count"
                    android:layout_toRightOf="@+id/tv_price"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:text="2"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_xsamll" />

                <Button
                    android:id="@+id/btn_ordersta"
                     android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_bgorange_nor"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="确认收货"
                    android:focusable="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xsamll" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
		 <ImageView
                android:id="@+id/iv_group_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/myorder_item_margin"
                android:background="@drawable/groupon_blue"
                android:scaleType="fitXY" 
                android:visibility="gone"/>
</LinearLayout>