<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"  
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/top_bg1"
        android:gravity="center" >
	
         <ImageView
            android:id="@+id/ivReturn"
            style="@style/ImageButton.Title.LeftButton"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_btn_back_left" />
         
        <ImageView
            android:id="@+id/ivFilter"
            style="@style/ImageButton.Title.RightButton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_filter" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/search_bar_bg_height"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/ivFilter"
            android:layout_toRightOf="@+id/ivReturn" >

            <EditText
                android:id="@+id/evSearch"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/search_bar_height"
                android:layout_gravity="center"
                android:layout_margin="@dimen/cart_items_margin"
                android:background="@drawable/search_bar_button_background"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="8.0dip"
                android:hint="@string/search_filter_hint"
                android:imeOptions="actionSearch"
                android:paddingLeft="5dip"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium" >
            </EditText>

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right|center"
                android:layout_marginRight="12.0dip"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/close"
                android:visibility="gone" />
        </FrameLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/filter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:background="@null"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/sort"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/copoun_sort_bar_bg_height"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="0dip"
            android:orientation="horizontal"
            android:weightSum="3" >

            <LinearLayout
                android:id="@+id/ll_popular"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_tab_left_yellow"
                android:gravity="center"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/popular"
                    android:textColor="@color/sort_bar_txt_color"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>
	
            <View
                android:id="@+id/divider2"
                style="@style/SortBar.Divider"
                android:layout_gravity="center" />
            
            <LinearLayout
                android:id="@+id/ll_sales"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:background="@drawable/selector_tab_middle_yellow"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/category"
                    android:textColor="@color/sort_bar_txt_color"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <View
                android:id="@+id/divider3"
                style="@style/SortBar.Divider"
                android:layout_gravity="center" />
            
            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_tab_right_yellow"
                android:gravity="center"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/grade"
                    android:textColor="@color/sort_bar_txt_color"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
