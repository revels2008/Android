<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sort"
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:paddingTop="10dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_grey_repeat">

    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:gravity="center">
	    <LinearLayout
	        android:id="@+id/ll_tab_item1"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:gravity="center"      
	        android:background="@drawable/tab_chris1_press"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/tv_sort_item1"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="人气"
	            android:gravity="center"
	            android:textColor="@color/chris_text_press"
	            android:textSize="15sp" 
	            android:layout_marginTop="6dp"/>
	    </LinearLayout>
	    
	    <View style="@style/SortBar.Divider" 
	        android:visibility="gone"/>
	
	    <LinearLayout
	        android:id="@+id/ll_tab_item2"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:gravity="center"      
	        android:background="@drawable/selector_tab_middle_chris"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/tv_sort_item2"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="销量"
	            android:gravity="center"
	            android:textColor="@color/chris_text_default"
	            android:layout_marginTop="6dp"
	            android:textSize="15sp" />
	    </LinearLayout>
	    
	    <View style="@style/SortBar.Divider"
	        android:visibility="gone" />
	
	    <LinearLayout
	        android:id="@+id/ll_tab_item3"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:gravity="center"      
	        android:background="@drawable/selector_tab_middle2_chris"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/tv_sort_item3"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="价格"
	            android:drawableRight="@drawable/selector_sort_down"
	            android:gravity="center"
	            android:textColor="@color/chris_text_default"
	            android:layout_marginTop="6dp"
	            android:textSize="15sp" />
	    </LinearLayout>
	    
	    <View style="@style/SortBar.Divider"
	        android:visibility="gone" />
	    
	    <LinearLayout
	        android:id="@+id/ll_tab_item4"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:gravity="center"      
	        android:background="@drawable/selector_tab_right_chris"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/tv_sort_item4"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="价格"
	            android:gravity="center"
	            android:textColor="@color/chris_text_default"
	            android:layout_marginTop="6dp"
	            android:textSize="15sp" />
	    </LinearLayout>
	
	</LinearLayout>
</RelativeLayout>