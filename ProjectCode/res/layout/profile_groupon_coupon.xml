<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grey_repeat"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_bar"
        layout="@layout/back_action_title_bar" />

    <include
        android:id="@+id/sort_bar"
        layout="@layout/profile_groupon_coupon_sort_bar" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/lvCashcoupon"
            style="@style/List.Tranparent" >
        </com.handmark.pulltorefresh.library.PullToRefreshListView>
		
        <RelativeLayout 
            android:id="@+id/rl_no_list"
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"	
            android:layout_height="wrap_content"
            >
             <ImageView 
            android:id="@+id/iv_empty"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_list"
            />
             
             <TextView
                 android:layout_below="@+id/iv_empty"
            android:id="@+id/nomatchedtips"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="@dimen/global_item_value_margin_right"
            android:gravity="center"
            android:text="@string/str_blank_list"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small"
            android:visibility="gone" />
            
        </RelativeLayout>
        
        
        
        

        <!-- <include layout="@layout/progressbar_layout" /> -->
    </FrameLayout>

</LinearLayout>