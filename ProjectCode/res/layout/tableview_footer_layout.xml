<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:orientation="horizontal" >

    <RelativeLayout
       android:id="@+id/rela_left"
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_weight="6" >
        
        <TextView
	        android:id="@+id/bargainList"
	        android:layout_alignLeft="@+id/txt"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginLeft="@dimen/cart_items_margin"
	        android:layout_margin="@dimen/cart_items_margin"
	        android:lines="3"
	        android:ellipsize="end"
	        android:layout_toLeftOf="@+id/txt"
	        android:text="lkAKKAKSKKLaklksakjLKJSKJAKJLKJLKJLKJ"
	        android:textColor="@color/grey"
	        android:textSize="12sp" />
        
    </RelativeLayout>
    
    <LinearLayout
       android:id="@+id/linear_left"
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_weight="5"
       android:orientation="vertical" >
        
        <RelativeLayout
           android:id="@+id/rela_top"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:paddingRight="10dp"
           android:layout_weight="1" > 
           
            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/shopping_cart_total"
                android:textColor="@color/black"
                android:textSize="@dimen/cart_text_normal_size" />
            
            <TextView
                android:id="@+id/empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/cart_items_margin"
                android:layout_centerVertical="true"
                android:text="00"
                android:textColor="@color/orange"
                android:textSize="@dimen/cart_text_normal_size"
                android:visibility="invisible" />
            
            <TextView
                android:id="@+id/priceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/empty"
                android:layout_marginRight="@dimen/cart_items_margin"
                android:layout_centerVertical="true"
                android:text="ï¿¥ 0.00"
                android:textColor="@color/orange"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/cart_text_normal_size" />
            
        </RelativeLayout>
        
        <RelativeLayout
           android:id="@+id/rela_bottom"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:paddingRight="10dp"
           android:layout_weight="1" > 
           
           <TextView
                android:id="@+id/totalNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/shopping_cart_num"
                android:textColor="@color/black"
                android:textSize="@dimen/cart_text_normal_size" />

           <TextView
                android:id="@+id/emptytwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/cart_items_margin"
                android:layout_centerVertical="true"
                android:text="00"
                android:textColor="@color/orange"
                android:textSize="@dimen/cart_text_normal_size"
                android:visibility="invisible" />
           
            <TextView
                android:id="@+id/numTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" x 0"
                android:textColor="@color/orange"
                android:layout_centerVertical="true"
                android:textSize="@dimen/cart_text_normal_size"
                android:layout_toLeftOf="@+id/emptytwo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/cart_items_margin" />
            
        </RelativeLayout>
        
    </LinearLayout>
    
</LinearLayout>
