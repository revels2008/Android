<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/ad_height"
    android:paddingLeft="12dp"
    android:background="@drawable/nav_bg" >

    <TextView
        android:id="@+id/tv_navigation_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/selector_nav_text"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_navigation_food_amount"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/iv_navigation_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:layout_alignParentRight="true" 
        android:layout_centerVertical="true"
        android:src="@drawable/next_nor"/>
    <TextView android:id="@+id/tv_num" android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:layout_alignParentRight="true"
        android:visibility="gone" 
        android:layout_centerVertical="true" />

</RelativeLayout>