<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@drawable/selector_nav_item"
    >
    <TextView android:id="@+id/exTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:layout_marginLeft="10dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@drawable/selector_nav_text"
        android:text="价格区间:"
        android:textSize="@dimen/text_size_large"
        />
    
    
    <ImageView android:id ="@+id/exIndicator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:layout_marginRight="10dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/next_nor"/>
    
     <TextView android:id="@+id/exValue"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:layout_marginLeft="8dip"
        android:layout_toRightOf="@+id/exTitle"
        android:layout_toLeftOf="@+id/exIndicator"
        android:layout_centerVertical="true"
		android:gravity="left|center_vertical"
        android:text="未选择"
        android:textColor="@drawable/selector_nav_text"
        android:textSize="@dimen/text_size_medium"
        android:singleLine="true"
        />
	
</RelativeLayout>
