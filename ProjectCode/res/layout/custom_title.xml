<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@drawable/tab_unselected" >

    <ImageView
        android:id="@+id/custom_imageview_gohome"
        style="@style/title_right_button"
        android:layout_width="@dimen/title_button_height"
        android:layout_height="@dimen/title_button_height"
        android:layout_gravity="left|center"
        android:scaleType="centerInside"
        android:layout_marginLeft="5dp"
        android:src="@drawable/button_details_gohome"
        android:background="@drawable/tab_selected" />

    <TextView
        android:id="@+id/custom_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/login"
        android:textColor="#fff"
        android:textSize="20sp" />

</FrameLayout>