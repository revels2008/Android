<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >

    <include
        android:id="@+id/custom_title"
        layout="@layout/back_action_title_bar" />

    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/custom_title"
        android:layout_marginLeft="@dimen/global_view_margin"
        android:layout_marginRight="@dimen/global_view_margin"
        android:layout_marginTop="@dimen/global_item_value_margin_right" >

        <EditText
            android:id="@+id/login_name_et"
            style="@style/EditText.USERNAME" />

        <EditText
            android:id="@+id/login_pwd_et"
            style="@style/EditText.PASSWORD"
            android:layout_below="@id/login_name_et"
            android:layout_marginTop="@dimen/global_item_value_margin_right" />

        <LinearLayout
            android:id="@+id/ll_operbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_pwd_et"
            android:layout_marginTop="@dimen/global_item_value_margin_right"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2" >

            <Button
                android:id="@+id/btn_reg"
                style="@style/linearlayout_btn_grey"
                android:layout_width="0dip"
                android:layout_height="@dimen/title_button_height"
                android:layout_marginRight="@dimen/global_view_margin"
                android:layout_weight="1"
                android:text="@string/registration"
                android:textColor="@color/text_color_white_btn"
                android:textSize="@dimen/text_size_large" />

            <Button
                android:id="@+id/btn_log"
                style="@style/linearlayout_btn_red"
                android:layout_width="0dip"
                android:layout_height="@dimen/title_button_height"
                android:layout_weight="1"
                android:text="@string/login"
                android:textColor="@color/text_color_red_btn"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>
    </RelativeLayout>

