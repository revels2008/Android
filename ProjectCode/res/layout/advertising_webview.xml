<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/rl_webview_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@drawable/top_bg2" >

    <ImageView
        android:id="@+id/ivBack"
        style="@style/ImageButton.Title.LeftButton"
        android:layout_centerVertical="true"
        android:src="@drawable/selector_btn_back_left"/>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/ivBack"
        android:gravity="center">
	    <TextView
	        android:id="@+id/tvTitle"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:text="@string/login"
	        android:textColor="@color/white"
	        android:gravity="center"
	        android:textSize="@dimen/text_size_xlarge" />
	</LinearLayout>
	</RelativeLayout>

        <com.powerlong.electric.app.widget.PlWebView
            android:id="@+id/adv_webview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:layout_below="@+id/rl_webview_title"
            android:layout_gravity="center">
        </com.powerlong.electric.app.widget.PlWebView>



</RelativeLayout>