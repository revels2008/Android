<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grey_repeat" >

    <LinearLayout
        android:id="@+id/rl_order_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单状态:"
            android:textColor="@color/activity_text_grey"
            android:textSize="@dimen/groupon_detail_grey_content" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单状态:"
            android:textColor="@color/activity_text_grey"
            android:textSize="@dimen/groupon_detail_grey_content" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_bg"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/ivReturn"
            style="@style/ImageButton.Bottom.LeftButton"
            android:src="@drawable/selector_btn_back_left" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:singleLine="true"
            android:text="总计：2件商品，199.00元"
            android:textColor="@color/white"
            android:textSize="@dimen/settile_content" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_order_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/title"
        android:layout_below="@+id/rl_order_status"
        android:layout_marginBottom="@dimen/list_padding"
        android:layout_marginLeft="@dimen/list_padding"
        android:layout_marginRight="@dimen/list_padding"
        android:layout_marginTop="@dimen/list_padding"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/top_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_bgbill1_nor"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/info_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/list_bgbill2_nor" >

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="10dip"
                        android:text="收货人："
                        android:textColor="@color/B_black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                         android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@+id/tv_userphone"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/tel" />

                    <TextView
                        android:id="@+id/tv_userphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="10dip"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:textColor="@color/B_black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_fenge"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_username"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:src="@drawable/line_dotted" />

                    <TextView
                        android:id="@+id/tv_useraddr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_fenge"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="10dip"
                        android:paddingBottom="8dp"
                        android:text="收货地址："
                        android:textColor="@color/light_gray"
                        android:textSize="14sp" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/list_bgbill" />

            <LinearLayout
                android:id="@+id/ll_order_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_layout"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rel_order"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_order_detail"
                android:background="@drawable/list_bgbill2_nor"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_order_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dip"
                    android:text="订单号："
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@+id/tv_order_text"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_order_zhifu_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_order_text"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="5dp"
                    android:text="支付宝订单号:"
                    android:textColor="@color/grey"
                    android:textSize="14sp" 
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_order_zhifuid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_order_id"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tv_order_zhifu_text"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="14sp" 
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_order_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_order_zhifu_text"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="5dp"
                    android:text="收货时间："
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_order_zhifuid"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tv_order_date_text"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="14sp" 
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_order"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_yunfei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="10dp"
                    android:text="运费"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_freight "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:text="100"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_shifukuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_yunfei"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="10dp"
                    android:text="实付款"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_yunfei"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/red"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

  <!--   <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" /> -->

</RelativeLayout>